@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
      <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" minlength="3" maxlength="100" placeholder="Name" class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" minlength="5" maxlength="2500" placeholder="Description" class="form-control" required/>
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success btn-lg" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-lg">Back</a>
    </div>
</form>

@section Scripts {
@{
    <partial name="_ValidationScriptsPartial"/>
    }
}